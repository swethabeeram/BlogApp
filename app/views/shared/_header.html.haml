#header
  %h2.title The BlogApp HAML

  #nav
    = link_to "Posts", posts_path, :class => ((params[:controller]=="posts" && params[:action]!="haml_demo")? "active" : "")
    = link_to "Categories", categories_path, :class => (params[:controller]=="categories" ? "active" : "")
    = link_to "Photos", photos_path, :class => (params[:controller]=="photos" ? "active" : "")
    = link_to "Attachments", attachments_path, :class => (params[:controller]=="attachments" ? "active" : "")
    = link_to "HAML DEMO", haml_demo_posts_path, :class => (params[:action]=="haml_demo" ? "active" : "")

    #login_links
      - if logged_in?
        = link_to "Logout", logout_users_path
      - else
        = link_to "Login", login_users_path
