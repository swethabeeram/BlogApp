<h2 class="title">My Photos</h2>
<%= link_to "Add New Photo", new_photo_path%>
<br/><br/>

<% unless @photos.empty? %>
  <ul class="photos_list">
    <% @photos.each do |photo| %>
    <li><%= link_to image_tag(photo.photo.url(:thumb)), photo_path(photo) %></li>
    <% end %>
  </ul>
<% else %>
  No Photos Found!
<% end %>
